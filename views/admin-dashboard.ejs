      row.className = 'job-row p-5 flex items-center justify-between gap-4 transition-colors cursor-pointer';
      row.dataset.id = job.__backendId;
      row.innerHTML = getJobRowHTML(job);
      
      row.querySelector('.edit-btn').addEventListener('click', (e) => {
        e.stopPropagation();
        openEditModal(job);
      });
      row.querySelector('.delete-btn').addEventListener('click', (e) => {
        e.stopPropagation();
        openDeleteModal(job);
      });
      row.addEventListener('click', () => openEditModal(job));

      return row;
    }

