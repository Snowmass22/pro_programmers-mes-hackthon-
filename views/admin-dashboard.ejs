      const locationEl = row.querySelector('.job-location');
      const typeEl = row.querySelector('.job-type');
      const statusEl = row.querySelector('.job-status');

      if (titleEl) titleEl.textContent = job.title;
      if (deptEl) deptEl.textContent = job.department;
      if (locationEl) locationEl.textContent = job.location;
      if (typeEl) typeEl.textContent = job.type;
      if (statusEl) {
        statusEl.textContent = job.status;
        statusEl.className = `job-status px-3 py-1 rounded-full text-xs font-medium ${getStatusClasses(job.status)}`;
      }

      const editBtn = row.querySelector('.edit-btn');
      const deleteBtn = row.querySelector('.delete-btn');
      
      editBtn.replaceWith(editBtn.cloneNode(true));
      deleteBtn.replaceWith(deleteBtn.cloneNode(true));
      
      row.querySelector('.edit-btn').addEventListener('click', (e) => {
        e.stopPropagation();
        openEditModal(job);
      });
      row.querySelector('.delete-btn').addEventListener('click', (e) => {
        e.stopPropagation();
        openDeleteModal(job);
      });
    }

