    function renderJobs() {
      const existingRows = new Map();
      jobsContainer.querySelectorAll('.job-row').forEach(row => {
        existingRows.set(row.dataset.id, row);
      });

      if (jobs.length === 0) {
        emptyState.style.display = 'block';
        existingRows.forEach(row => row.remove());
        return;
      }

      emptyState.style.display = 'none';

      jobs.forEach(job => {
        if (existingRows.has(job.__backendId)) {
          updateJobRow(existingRows.get(job.__backendId), job);
          existingRows.delete(job.__backendId);
        } else {
          jobsContainer.appendChild(createJobRow(job));
        }
      });

      existingRows.forEach(row => row.remove());
    }

