    function showToast(message, type = 'info') {
      const toast = document.createElement('div');
      toast.className = `fixed bottom-4 right-4 px-5 py-3 rounded-xl text-white font-medium shadow-lg fade-in z-50 ${type === 'error' ? 'bg-red-600' : 'bg-slate-700'}`;
